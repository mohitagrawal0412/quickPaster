{
  "manifest_version": 3,
  "name": "Quick Code Paster",
  "version": "1.0",
  "description": "Paste saved code snippets using shortcut keys",
  "permissions": ["storage", "scripting", "activeTab", "clipboardWrite"],
  "action": {
    "default_popup": "popup.html"
  },
  "commands": {
    "paste_note_1": {
      "suggested_key": {
        "default": "Ctrl+Shift+1"
      },
      "description": "Paste Note 1"
    },
    "paste_note_2": {
      "suggested_key": {
        "default": "Ctrl+Shift+2"
      },
      "description": "Paste Note 2"
    },
    "paste_note_3": {
      "suggested_key": {
        "default": "Ctrl+Shift+3"
      },
      "description": "Paste Note 3"
    },
    "paste_note_4": {
      "suggested_key": {
        "default": "Ctrl+Shift+3"
      },
      "description": "Paste Note 3"
    },
    "paste_note_5": {
      "suggested_key": {
        "default": "Ctrl+Shift+5"
      },
      "description": "Paste Note 5"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
